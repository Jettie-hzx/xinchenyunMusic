.songDetailContainer {
  height: 100%;
  background-color: #190d02d6;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.author {
  color: #ccc;
  font-size: 30rpx;
}
.circle {
  position: relative;
  z-index: 20;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #fff;
  margin: 30rpx 0;
}
.needle {
  position: relative;
  left: 60rpx;
  top: -50rpx;
  z-index: 10;
  width: 192rpx;
  height: 274rpx;
  transform-origin: 40rpx 0;
  transform: rotate(-25deg);
  transition: transform 1s;
}
.needleRotate {
  transform: rotate(0deg);
}
.discContainer {
  position: relative;
  top: -180rpx;
  width: 598rpx;
  height: 598rpx;
}
.discContainer .disc {
  width: 100%;
  height: 100%;
}
.discContainer .songCover {
  position: absolute;
  width: 355rpx;
  height: 355rpx;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.disAnimation {
  animation: disc 12s linear infinite 1s;
}
@keyframes disc {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
.progressControl {
  position: relative;
  top: -32rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 20rpx;
  width: 90%;
}
.progressControl .liveTime {
  color: #fff;
}
.progressControl .barControl {
  position: relative;
  width: 78%;
  height: 1rpx;
  background-color: rgba(255, 255, 255, 0.5);
}
.progressControl .barControl .currentTimeBar {
  position: absolute;
  top: 0;
  left: 0;
  width: 100rpx;
  height: 1px;
  background-color: red;
}
.progressControl .barControl .currentTimeBar::after {
  content: "";
  position: absolute;
  top: -6rpx;
  right: -6px;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #fff;
}
.progressControl .duration {
  color: rgba(255, 255, 255, 0.5);
}
.musicControl {
  position: absolute;
  bottom: 40rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 80%;
}
.musicControl text {
  width: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 55rpx;
}
.musicControl .icon-bofang {
  font-size: 90rpx;
}
.musicControl .icon-zanting {
  font-size: 80rpx;
}
