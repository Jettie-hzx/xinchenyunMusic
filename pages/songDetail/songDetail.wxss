/* 播放界面毛玻璃效果 */
.songDetailContainer {
  height: 100%;
  background-color: #190d02d6;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.author {
  color: #ccc;
  font-size: 30rpx;
}
.sing-show {
  width: 100%;
  height: 900rpx;
}
.sing-show .singCon {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}
.sing-show .songLyric {
  color: #fff;
}
.sing-show .songLyric .lyricContainer {
  position: relative;
  width: 600rpx;
  height: 800rpx;
  margin-top: 100rpx;
  text-align: center;
  overflow: hidden;
  font-size: 33rpx;
  line-height: 72rpx;
}
.sing-show .songLyric .lyricContainer .lyricMove {
  position: absolute;
  width: 600rpx;
}
.sing-show .songLyric .lyricContainer .lyricActive {
  color: #d43c33;
}
.sing-show .songLyric .nolyric {
  margin-top: 400rpx;
}
.circle {
  position: absolute;
  z-index: 20;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: #fff;
  margin-top: 30rpx;
}
.needle {
  position: absolute;
  left: 338rpx;
  top: 60rpx;
  z-index: 10;
  width: 185rpx;
  height: 264rpx;
  transform-origin: 40rpx 0;
  transform: rotate(-25deg);
  transition: transform 1s;
}
.needleRotate {
  transform: rotate(0deg);
}
.discContainer {
  position: absolute;
  top: 200rpx;
  width: 598rpx;
  height: 598rpx;
}
.discContainer .disc {
  width: 100%;
  height: 100%;
}
.discContainer .songCover {
  position: absolute;
  width: 355rpx;
  height: 355rpx;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.disAnimation {
  animation: disc 12s linear infinite 1s;
}
@keyframes disc {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
.progressControl {
  position: relative;
  top: 50rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 20rpx;
  width: 680rpx;
}
.progressControl .liveTime {
  color: #fff;
}
.progressControl .barControl {
  position: relative;
  width: 520rpx;
  height: 10rpx;
}
.progressControl .barControl .sliderBar {
  position: absolute;
  top: -16rpx;
  left: 0;
  height: 1px;
  margin: 0;
  width: 520rpx;
}
.progressControl .duration {
  color: rgba(255, 255, 255, 0.5);
}
.musicControl {
  position: absolute;
  bottom: 40rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 80%;
}
.musicControl text {
  width: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 55rpx;
}
.musicControl .icon-bofang {
  font-size: 90rpx;
}
.musicControl .icon-zanting {
  font-size: 80rpx;
}
